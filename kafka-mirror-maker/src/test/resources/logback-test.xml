<configuration scan="true" packagingData="true">

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{ISO8601} [%level] [%thread] - %logger{36}: %message%n%ex</pattern>
    </encoder>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="console"/>
  </root>
</configuration>
